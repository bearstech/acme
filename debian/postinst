#!/bin/sh
# postinst script for acme.sh
#
# see: dh_installdeb(1)

set -e


case "$1" in
  configure)
    # Set default CA to let's encrypt if not defined
    if ! grep -q DEFAULT_ACME_SERVER /etc/acme/account.conf ; then
      acme.sh --set-default-ca  --server  letsencrypt
    fi
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
